<ui:FluentWindow x:Class="ShadesToolkit.Views.Pages.ImageInfo.ImageName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShadesToolkit.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ShadesToolkit.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Image Info"
    MaxWidth="400"
    MaxHeight="150"
    MinHeight="150"
    MinWidth="400"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="None"
    WindowCornerPreference="Default"
    WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid">
        <StackPanel>
            <ui:TitleBar Title="Image Info" MinWidth="400" ShowClose="True" ShowMinimize="False" ShowMaximize="False" CanMaximize="False"/>
            <ui:TextBlock Text="Image Name" Margin="14,8,0,2" FontSize="12" Opacity="0.8"/>
            <WrapPanel Margin="10,2,0,0">
                <ui:TextBox x:Name="ImageNameTextBox" PlaceholderText="Image Name.." Width="300"/>
                <ui:Button x:Name="SaveButton" Content="Save" Margin="8,0,0,0" Height="34" Width="60" BorderThickness="0" Click="SaveButton_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
