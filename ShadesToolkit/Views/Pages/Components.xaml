<Page x:Class="ShadesToolkit.Views.Pages.Components"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ShadesToolkit.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="clr-namespace:ShadesToolkit.Models"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Components"
      Margin="0,8,0,0"
      d:DataContext="{d:DesignInstance local:Components, IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="10">
            <ui:Button  CornerRadius="8" Height="62" Width="80">
                <StackPanel>
                    <ui:SymbolIcon Symbol="Delete24"/>
                    <ui:TextBlock Text="Remove" Margin="0,6,0,0"/>
                </StackPanel>
            </ui:Button>
        </WrapPanel>
       
    </Grid>
</Page>